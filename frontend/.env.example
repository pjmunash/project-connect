# Frontend example env for Vite
# Copy to `frontend/.env` or set these as VITE_ env vars in your environment.

# Base API URL for backend (local backend)
VITE_API_BASE=http://localhost:4000/api

# Toggle whether frontend should use Firebase for auth (true/false)
VITE_USE_FIREBASE=true

# Firebase Web SDK configuration (fill from your Firebase console)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Optional: host frontend on a different port
# VITE_PORT=5173
